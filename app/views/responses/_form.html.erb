<%= form_with(model: response, local: true) do |form| %>
  <% if response.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(response.errors.count, "error") %> prohibited this response from being saved:</h2>

      <ul>
        <% response.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :user %>
    <%= form.select(:user_id, form_selection(users, :slack_handle)) %>
  </div>

  <div class="field">
    <%= form.label :question %>
    <%= form.select(:question_id, form_selection(questions, :body)) %>
  </div>

  <div class="field">
    <%= form.label :your_answer %>
    <%= form.text_field :body %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
