<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :slack_handle %>
    <%= form.text_field :slack_handle %>
  </div>

  <div class="field">
    <%= form.label :house %>
    <% houses.each do |house| %>
      <div class="radio_selection">
        <%= form.label :house, "#{house.name}", :value => "#{house.id}" %>
        <%= form.radio_button :house_id, "#{house.id}" %>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
